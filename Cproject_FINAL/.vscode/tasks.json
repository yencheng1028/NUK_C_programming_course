{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-O2",
                "-Wall",
                "-g",
                "${fileDirname}\\*.c",
                "-I",
                "${fileWorkspaceFolder}\\include",
                "-o",
                "${fileWorkspaceFolder}\\output\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Debugging Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${fileWorkspaceFolder}\\src\\*.c",
                "-I",
                "${fileWorkspaceFolder}\\include",
                "-o",
                "${fileWorkspaceFolder}\\output\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" 
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}